{% macro image(url, class) %}
<picture>
  <source srcset=".{{ url }}.avif" type="image/avif" />
  <source srcset=".{{ url }}.webp" type="image/webp" />
  <img class="{{ class }}" src=".{{ url }}.jpg" alt="" loading="lazy" />
</picture>
{% endmacro %}

<div id="avatars" class="ui__content">
  <div class="ui__wrap">
    <h4 class="ui__caption">Avatars</h4>

    {% for i in range(1, 20) %}
    {{ image('/img/avatars/item-' + i + '', 'avatar') }}
    {% endfor %}
  </div>
</div>
