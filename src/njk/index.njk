{% extends "main.njk" %} {% block content %}

<section class="section-base">
  <div class="container">
    <div class="section-base__wrap">
      <div class="section-base__content">
        <h1 class="title-h1 section-base__title">
          Discover digital art & Collect NFTs
        </h1>
        <p class="text-p1 section-base__text">
          NFT marketplace UI created with Anima for Figma. Collect, buy and sell
          art from more than 20k NFT artists.
        </p>
        <button class="btn btn-dark section-base__btn">Get Started</button>

        <div class="list section-base__list">
          <div class="list__item">
            <h4 class="title-h4 list__title">240k+</h4>
            <p class="text-p1 list__text">Total Sale</p>
          </div>
          <div class="list__item">
            <h4 class="title-h4 list__title">100k+</h4>
            <p class="text-p1 list__text">Auctions</p>
          </div>
          <div class="list__item">
            <h4 class="title-h4 list__title">240k+</h4>
            <p class="text-p1 list__text">Artists</p>
          </div>
        </div>
      </div>

      <div class="section-base__image">
        <img class="section-base__img" src="/img/first-image.jpg" alt="" />
      </div>
    </div>
  </div>
</section>

<section class="categories">
  <div class="container">
    <h3 class="title-h3 categories__title">Browse Categories</h3>

    <div class="categories__list">
      {% for i in range(1, 9) %}
      <div class="category">
        <div class="category__image">
          <img
            class="category__img"
            src="/img/category/item-{{ i }}.png"
            alt=""
          />
          <img
            class="category__icon"
            src="/img/category/icon-{{ i }}.svg"
            alt=""
          />
        </div>

        <div class="category__content">
          <p class="title-h5 category__text">Art</p>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

{% include "subscribe.njk" %} {% endblock %}
