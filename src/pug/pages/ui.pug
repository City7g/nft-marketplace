extends ../layouts/main

block variables
  - const title = 'UI'

block content
  - const icomoon = ['icon-ArrowLeft', 'icon-ArrowRight', 'icon-Copy', 'icon-DiscordLogo', 'icon-EnvelopeSimple', 'icon-Eye', 'icon-EyeSlash', 'icon-Globe', 'icon-InstagramLogo', 'icon-List', 'icon-LockKey', 'icon-MagnifyingGlass', 'icon-Plus', 'icon-Rocket', 'icon-RocketLaunch', 'icon-Storefront', 'icon-TrendUp', 'icon-TwitterLogo', 'icon-User', 'icon-UserCircle', 'icon-Wallet', 'icon-YoutubeLogo']

  section
    .container
      .ui
        aside.ui__aside
          a(href='#text') Text
          a(href='#avatars') Avatar
          a(href='#buttons') Buttons
          a(href='#all') All

        .ui__main
          h1 UI page

          .ui__content
            .ui__wrap.ui__fonts
              h4.ui__caption Font: Work Mono
              p.title-h1 NFT Marketplace
              p.title-h2 NFT Marketplace
              p.title-h3 NFT Marketplace
              p.title-h4 NFT Marketplace
              p.title-h5 NFT Marketplace
              p.text-p1 NFT Marketplace
              p.text-p2 NFT Marketplace
              p.text-p3 NFT Marketplace

          .ui__content
            .ui__wrap.ui__fonts
              h4.ui__caption Font: Space Mono
              p.title-h1s NFT Marketplace
              p.title-h2s NFT Marketplace
              p.title-h3s NFT Marketplace
              p.title-h4s NFT Marketplace
              p.title-h5s NFT Marketplace
              p.text-p1s NFT Marketplace
              p.text-p2s NFT Marketplace
              p.text-p3s NFT Marketplace

          .ui__content
            .ui__wrap
              h4.ui__caption Font: Space Mono
              each icon in icomoon
                i(class=`${icon}`)

          .ui__content
            .ui__wrap.ui__wrap--column
              h4.ui__caption Colors
              .ui__colors
                .ui__color(style='background: #2B2B2B; border: 1px solid #3B3B3B')
                .ui__color(style='background: #3B3B3B')
                .ui__color(style='background: #858584')
                .ui__color
              .ui__colors
                .ui__color(style='background: #A259FF')
              .ui__colors
                .ui__color
                .ui__color

          .ui__content
            .ui__wrap
              h4.ui__caption Button lg
              button.btn Primary button
              button.btn(disabled) Disabled button
              button.btn.btn--outline Primary button
              button.btn.btn--outline(disabled) Disabled button

          .ui__content
            .ui__wrap
              h4.ui__caption Burger
              button.burger
                span
                span
                span
          .ui__content
            .ui__wrap
              h4.ui__caption Input
              input(type='text' placeholder='Type text')
              input(type='email' placeholder='Type email')
              input(type='password' placeholder='Type password')
              input(type='text' placeholder='Disabled input' disabled)
          .ui__content
            .ui__wrap.ui__wrap--column
              h4.ui__caption Input checkbox
              .checkbox
                input#checkbox(type='checkbox')
                label(for='checkbox') Checkbox
              .checkbox
                input#checkboxChecked(type='checkbox' checked='checked')
                label(for='checkboxChecked') Checkbox Checked
              .checkbox
                input#checkboxDisabled(type='checkbox' disabled='disabled')
                label(for='checkboxDisabled') Checkbox Disabled
          .ui__content
            .ui__wrap.ui__wrap--column
              h4.ui__caption Input radio
              .radio
                input#radio(type='radio' name='radio')
                label(for='radio') Radio One
              .radio
                input#radioChecked(type='radio' name='radio' checked='checked')
                label(for='radioChecked') Radio Two
              .radio
                input#radioDisabled(type='radio' name='radio' disabled='disabled')
                label(for='radioDisabled') Radio Disabled
          .ui__content
            .ui__wrap.ui__wrap--column
              h4.ui__caption Switches
              .radio
                input#switch(type='checkbox' role='switch')
                label(for='switch') Switch One
              .radio
                input#switchChecked(type='checkbox' role='switch' checked='checked')
                label(for='switchChecked') Switch Two
              .radio
                input#switchDisabled(type='checkbox' role='switch' disabled='disabled')
                label(for='switchDisabled') Switch Disabled
          .ui__content
            .ui__wrap.ui__wrap--column
              h4.ui__caption Select
              select
                option One
                option Two
                option Three
              select(disabled='disabled')
                option One
                option Two
                option Three
          .ui__content
            .ui__wrap
              h4.ui__caption Spinner
              .spinner.color(role='status')
